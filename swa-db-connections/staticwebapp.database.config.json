{
  "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
  "data-source": {
    "database-type": "mysql",
    "options": {
      "set-session-context": false
    },
    "connection-string": "@env('DATABASE_CONNECTION_STRING')"
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/rest"
    },
    "graphql": {
      "allow-introspection": true,
      "enabled": true,
      "path": "/graphql"
    },
    "host": {
      "mode": "production",
      "cors": {
        "origins": ["http://localhost:3000", "http://localhost:4280"],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "AzureAD",
        "jwt": {
          "audience": "4e3913c3-368b-466c-9f2f-88ba692ef44f",
          "issuer": "https://login.microsoftonline.com/25436f27-0214-470d-9d05-614b56f57279/v2.0"
        }
      }
    }
  },
  "entities": {
    "Person": {
      "source": "test",
      "permissions": [
        {
          "role": "authenticated",
          "actions": [
            {
              "action": "*",
              "policy": {
                "database": "@item.Name eq 'Dheeraj'"
              }
            }
          ]
        }
      ]
    },
    "Customer": {
      "source": "customers",
      "permissions": [
        {
          "role": "authenticated",
          "actions": ["*"]
        }
      ]
    }
  }
}
